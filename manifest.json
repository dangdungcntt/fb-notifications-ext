{
  "name": "Facebook Notificatons",
  "description": "Facebook Notificatons",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "images/fb48.png"
  },
  "icons": {
    "16": "images/fb16.png",
    "32": "images/fb32.png",
    "48": "images/fb48.png",
    "128": "images/fb128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "https://*.facebook.com/*",
    "contextMenus",
    "tabs",
    "background"
  ],
  "manifest_version": 2
}

